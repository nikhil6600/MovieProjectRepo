@model AddMovieViewModle

@{
    ViewData["Title"] = "AddMovie";
}

<h1>AddMovie</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMovie">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="movie.Title" class="control-label"></label>
                <input asp-for="movie.Title" class="form-control" />
                <span asp-validation-for="movie.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.ReleasYear" class="control-label"></label>
                <input asp-for="movie.ReleasYear" class="form-control" />
                <span asp-validation-for="movie.ReleasYear" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="genre" class="control-label"></label>
                <select asp-for="genre.Id" class="form-select form-control form-select-sm" asp-items="@(new SelectList(Model.genreList,"Id","Title"))">

                </select>
                <span asp-validation-for="genre.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Upload Photo</label>
                <input asp-for="movie.PhotoPath" class="form-control" type="file" id="formFile">
                @*<span asp-validation-for="movie.PhotoPath" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input asp-action="AddMovie" type="submit" value="Add Movie" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <br />
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
